<div class="card card-brand shadow my-4">
    <div class="card-body">
        <div class="row">
            <div class="col-4">
                <h4>@Title</h4>
                <p>@HelpText</p>
            </div>
            <div class="col-8">
                @ChildContent
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter, EditorRequired]
    public string Title { get; set; } = default!;

    [Parameter, EditorRequired]
    public string HelpText { get; set; } = default!;

    [Parameter, EditorRequired]
    public RenderFragment ChildContent { get; set; } = default!;
}
